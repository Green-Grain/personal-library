.book
  .book__left
    .book__left__image
      = image_tag book.image, alt: "#{book.title}の画像" if book.image.present?
  .book__right
    .book__right__info
      .book__right__info--title
        %span.caption 書籍名
        %span.content
          = book.title
      .book__right__info--author
        %span.caption 著者
        %span.content
          = book.author.name
      .book__right__info--publisher
        %span.caption 出版社
        %span.content
          = book.publisher.name
      .book__right__info--isbn
        %span.caption ISBN
        %span.content
          = book.isbn
    .book__right__supplement
      .book__right__supplement__evaluation
        .book__right__supplement__evaluation--positive
          = fa_icon 'thumbs-up', class: 'icon'
          10
        .book__right__supplement__evaluation--negative
          = fa_icon 'thumbs-down', class: 'icon'
          5
      .book__right__supplement__edit
        -# 自分の書架にない場合は登録、ある場合は編集
        My書架に追加/評価を編集
      .book__right__supplement__link
        = link_to "#{book.link_url}" do
          .book__right__supplement__link--rakuten
            楽天ブックス
